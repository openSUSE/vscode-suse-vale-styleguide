{
  "name": "suse-valey-styleguide",
  "displayName": "SUSE Valey rules",
  "description": "Vale rules for SUSE styleguide",
  "icon": "icon.png",
  "version": "0.6.28",
  "repository": "https://github.com/openSUSE/vscode-suse-vale-styleguide/",
  "publisher": "bazantici",
  "author": {
    "name": "Tomáš Bažant",
    "email": "tbazant@suse.cz"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "onLanguage:asciidoc"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "SUSE Vale",
      "properties": {
        "suse-vale.custom.ignorelist": {
          "type": "string",
          "default": "",
          "description": "Path to a custom ignorelist file. Absolute or relative to the styles directory."
        }
      }
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "globals": "^17.2.0"
  }
}
