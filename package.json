{
  "name": "suse-vale-styleguide",
  "displayName": "SUSE Vale rules",
  "description": "Vale rules for SUSE styleguide",
  "icon": "icon.png",
  "version": "0.6.17",
  "repository": "https://github.com/openSUSE/vscode-suse-vale-styleguide/",
  "publisher": "openSUSE",
  "author": {
    "name": "Tomáš Bažant",
    "email": "tbazant@suse.cz"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "onLanguage:asciidoc"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "SUSE Vale",
      "properties": {
        "suse-vale.custom.ignorelist": {
          "type": "string",
          "default": "",
          "description": "Path to a custom ignorelist file. Absolute or relative to the styles directory."
        }
      }
    }
  }
}